{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/milestones/06/06", // Path to your built executable
            "args": ["--output","ms6_aab006", "--time_step","0.001", "--sim_time","200", "--temp","150", "--tau","20", "--mode","1", "--lattice_size","4", "--lattice_spacing","1.5", "--cutoff", "1.0"], // Command-line arguments if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Name of the build task defined in tasks.json
            "miDebuggerPath": "/usr/bin/gdb" // Path to GDB on your system
        }
    ]
}
